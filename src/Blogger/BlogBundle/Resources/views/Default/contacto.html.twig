{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}
{{ 'blog.default.contacto.titulo'|trans({}, 'BloggerBlogBundle') }}
{% endblock %}

{% block body -%}

<div class="container">
  <h2>Contactanos!</h2>
  <br></br>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <form>
              <div class="form-group">
                <label for="exampleInputEmail1">Direcion de Correo</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="example@gmail.com">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="">
              </div>
              <textarea class="form-control" rows="3"></textarea>
              <button type="submit" class="btn btn-success">Enviar</button>
            </form>
        </div>
        <div class="col-md-6"></div>
    </div>

    <form action="{{ path('blogger_blog_contacto') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <input type="submit" />
    </form>

</div>	

{% endblock %}


